# server/Dockerfile - production-friendly Node image
FROM node:18-alpine AS builder
WORKDIR /app
# copy package metadata first for caching
COPY package*.json ./
# if you use yarn replace the below
RUN npm ci --only=production

# copy app source
COPY . .

# runtime image
FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app /app
EXPOSE 3000
ENV NODE_ENV=production
CMD ["npm", "run", "start"]
